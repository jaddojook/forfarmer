<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detect3">

    <TextView
        android:id="@+id/diagnosisTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진을 넣어주세요"
        android:fontFamily="@font/suite"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_above="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="600px"
        android:layout_height="600px"
        android:layout_weight="1"
        android:src="@drawable/pic_placeholder"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/uploadButton"
        android:layout_width="350px"
        android:layout_height="150px"
        android:src="@drawable/b_upload"
        android:scaleType="fitXY"
        android:layout_below="@id/imageView"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/uploadButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/galleryButton"
            android:layout_width="300px"
            android:layout_height="120px"
            android:src="@drawable/b_gallery"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:layout_marginEnd="100dp"/>

        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="300px"
            android:layout_height="120px"
            android:fontFamily="@font/suite"
            android:src="@drawable/b_camera"
            android:scaleType="fitXY"
            android:background="@color/white"
            />
    </LinearLayout>

</RelativeLayout>