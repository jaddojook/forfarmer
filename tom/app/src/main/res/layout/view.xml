<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="5">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm Diary"
                android:textSize="40dp"
                android:fontFamily="@font/suite"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_weight="13"
        android:gravity="center">

        <ImageView
            android:id="@+id/selectimg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/farmdiary_2"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:layout_weight="15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|left"
            android:layout_weight="2">

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-12-14"
                android:fontFamily="@font/suite"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|left"
            android:layout_weight="2">

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맑음"
                android:fontFamily="@font/suite"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_weight="10">

        <TextView
            android:id="@+id/titview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목이 없습니다"
            android:fontFamily="@font/suite"
            android:textSize="30dp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/conview"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:text="내용이 없습니다"
                android:fontFamily="@font/suite"
                android:textSize="20dp"
                />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_weight="14">

        <ImageButton
            android:id="@+id/gobak"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:src="@drawable/b_return"
            android:scaleType="fitXY"
            android:background="@color/white"
            />

    </LinearLayout>
</LinearLayout>